{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "declarationMap": true,
    // "sourceMap": true,
    // "inlineSources": true,
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./",
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": []
}